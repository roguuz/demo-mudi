pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK8'
    }
    environment {
        env = "demo"
        tag = "${emv}_${BUILD_ID}"
    }
    stages {
        stage('Build') {
            environment {
            }
            steps {
                sh (
                    script: '''
                    mvn clean install
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 666120933049.dkr.ecr.us-east-1.amazonaws.com
                    docker build -t 666120933049.dkr.ecr.us-east-1.amazonaws.com/janus-service-driver:${tag} -f docker/Dockerfile .
                    docker push 666120933049.dkr.ecr.us-east-1.amazonaws.com/janus-service-driver:${tag}
                    ''',
                    returnStdout: true
                    )
            }
        }
        stage('Deploy') {
            steps{
                sh (
                    script: '''
                    
                    ''',
                    returnStdout: true
                )
            }
        }

    }
        post {
            always {
                cleanWs deleteDirs: true, notFailBuild: true
            }
        }
}
